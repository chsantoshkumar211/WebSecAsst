{
  "name": "WebSecAssistant",
  "version": "1.0.1",
  "description": "WebSecAsst",
  "permissions": [
    "downloads",
    "history",
	"file://*",
	"tabs",	
	"activeTab",
	"storage"
  ],
  
   "browser_action": {
	"default_icon": "images/WebSecAssistant.png",
	"default_popup": "popup.html"
   },

  "icons": {
    "16": "images/icon-16x16.png",
    "32": "images/icon-48x48.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png"
  },
  "manifest_version": 2
}
